<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- HOSTEL --> 
    <record id="action_hostel" model="ir.actions.act_window">
        <field name="name">Hostel</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hostel.hostel</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            Create Hostel.
        </p>
        </field>
    </record>

    <menuitem id="hostel_main_menu" name="Hostel" sequence="1"/>
    <menuitem id="hostel_menu" name="Hostel" parent="hostel_main_menu"
    action="my_hostel.action_hostel" groups="my_hostel.group_hostel_manager"
    sequence="1"/>
    

    <record id="view_hostel_form_view" model="ir.ui.view">
        <field name="name">hostel.hostel.form.view</field>
        <field name="model">hostel.hostel</field>
        <field name="arch" type="xml">
            <form string="Hostel">
                <sheet>
                    <div class="oe_title">
                        <h3>
                            <table>
                                <tr>
                                    <td style="padding-right:10px;">
                                    <field name="name" required="1"
                                    placeholder="Name" /></td>
                                    <td style="padding-right:10px;">
                                    <field name="hostel_code" placeholder="Code"
                                    /></td>
                                </tr>
                            </table>
                        </h3>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state"
                                placeholder="State" options='{"no_open": True}'/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country"
                                class="o_address_country" options='{"no_open": True,
                                "no_create": True}'/>
                                <field name="category_id" placeholder="Category"/>
                            </div>
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                            <field name="email" widget="email" context="{'gravatar_image': True}"/>
                        </group>
                        <group>
                            <field name="hostel_floors"/>
                            <field name="active"/>
                            <field name="type"/>
                            <field name="hostel_rating"/>
                            <field name="other_info"/>
                            <field name="_doc_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hostel_tree_view" model="ir.ui.view">
        <field name="name">hostel.hostel.tree.view</field>
        <field name="model">hostel.hostel</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="hostel_code"/>
                <field name="category_id" />
            </tree>
        </field>
    </record>

    <record id="view_hostel_search_view" model="ir.ui.view">
        <field name="name">Hostel Search</field>
        <field name="model">hostel.hostel</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="hostel_code"/>
            </search>
        </field>
    </record>

    <!-- ROOM --> 

    <record id="action_hostel_room" model="ir.actions.act_window">
        <field name="name">Hostel Room</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hostel.room</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            Create Hostel Room.
        </p>
        </field>
    </record>

    <menuitem id="hostel_room_menu" name="Hostel Room" parent="hostel_main_menu"
    action="my_hostel.action_hostel_room" groups="my_hostel.group_hostel_manager"
    sequence="1"/>
    
    <record id="view_hostel_room_tree_view" model="ir.ui.view">
        <field name="name">hostel.room.tree.view</field>
        <field name="model">hostel.room</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="room_num"/>
                <field name="room_floor" />
                <field name="rent_amount" />
                <field name="currency_id" />
            </tree>
        </field>
    </record>

    <record id="view_hostel_room_form_view" model="ir.ui.view">
        <field name="name">hostel.room.form.view</field>
        <field name="model">hostel.room</field>
        <field name="arch" type="xml">
            <form string="Hostel">
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="Room Name"/>
                            <field name="room_num" placeholder="Room No."/>
                            <field name="room_floor" placeholder="Floor" />
                            <field name="currency_id" placeholder="Currency" />
                            <field name="rent_amount" placeholder="Ammount" />
                            <field name="student_ids" placeholder="Students" />
                            <field name="hostel_amenities_ids" placeholder="Amenities" />
                            
                            <group>
                                <button name="make_available" string="Make Available" type="object"/>
                                <button name="make_closed" string="Make Borrowed" type="object"/>
                                <button name="make_draft" string="Make Draft" type="object"/>
                            </group>
                            <field name="state" widget="statusbar"/>
                            <button name="log_all_room_members" string="Log Members" type="object"/>

                            <button name="update_room_no" string="Update Room No" type="object"/>
                            <button name="find_room" string="Find Room" type="object"/>
                            <button name="filter_members" string="Filter Members" type="object"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- CATEGORY --> 

    <record id="action_hostel_category" model="ir.actions.act_window">
        <field name="name">Hostel Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hostel.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">
            Create Hostel Category.
        </p>
        </field>
    </record>

    <menuitem id="hostel_category_menu" name="Hostel Category" parent="hostel_main_menu"
    action="my_hostel.action_hostel_category" groups="my_hostel.group_hostel_manager"
    sequence="1"/>

    <record id="view_hostel_category_tree_view" model="ir.ui.view">
        <field name="name">hostel.category.tree.view</field>
        <field name="model">hostel.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" placeholder="Name"/>
                <field name="parent_id" placeholder="Parent"/>
                <field name="child_ids" placeholder="Children" />
            </tree>
        </field>
    </record>

    <record id="view_hostel_category_form_view" model="ir.ui.view">
        <field name="name">hostel.category.form.view</field>
        <field name="model">hostel.category</field>
        <field name="arch" type="xml">
            <form string="Hostel">
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="Name"/>
                            <field name="parent_id" placeholder="Parent"/>
                            <field name="child_ids" placeholder="Children" />
                            <button name="create_categories" string="Create Categories" type="object"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
