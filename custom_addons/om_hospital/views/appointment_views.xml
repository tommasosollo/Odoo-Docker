<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Appointment
            </p>
        </field>
    </record>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree string="Appointments">
                <field name="reference"/>
                <field name="patient_id"/>
                <field name="appointment_date" optional="show"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Appointment Form View -->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <button name="action_confirm" type="object" string="Confirm"
                        invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_ongoing" type="object" string="Ongoing"
                        invisible="state != 'confirmed'" class="oe_highlight"/>
                    <button name="action_done" type="object" string="Done"
                        invisible="state != 'ongoing'" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel"
                        invisible="state == 'done'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,ongoing,done"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="reference" readonly="True"/>
                            <field name="patient_id"/>
                            <field name="date_of_birth"/>
                        </group>
                        <group>
                            <field name="appointment_date"/>
                            <field name="note"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="prescription" string="Prescriptions">
                            <field name="prescription_drugs_ids">
                                <tree>
                                    <field name="reference"/>
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                    <field name="note" optional="show"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="reference" readonly="True"/>
                                            <field name="product_id"/>
                                        </group>
                                        <group>
                                            <field name="qty"/>
                                            <field name="note"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                            <group>
                                <field name="total_qty"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
