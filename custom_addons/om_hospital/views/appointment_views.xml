<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Appointment
            </p>
        </field>
    </record>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree string="Appointments">
                <field name="reference"></field>
                <field name="patient_id"></field>
                <field name="appointment_date" optional="show"></field>
                <field name="state"></field>
            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" 
                        invisible="state != 'draft'" class="oe_highlight"></button>
                    <button name="action_ongoing" type="object" string="Ongoing" 
                        invisible="state != 'confirmed'" class="oe_highlight"></button>
                    <button name="action_done" type="object" string="Done" 
                        invisible="state != 'ongoing'" class="oe_highlight"></button>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state == 'done'"></button>

                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,ongoing,done"></field>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="reference" readonly="True"></field>
                            <field name="patient_id"></field>
                        </group>
                        <group>
                        <field name="appointment_date"></field>
                            <field name="note"></field> 
                        </group>
                    </group>
                    <notebook>
                        <page name="prescription" string="Prescriptions">
                            <field name="prescription_drugs_ids" mode="tree,form">
                                <tree>
                                    <field name="reference"></field>
                                    <field name="product_id"></field>
                                    <field name="qty"></field>
                                    <field name="note" optional="show"></field>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="reference" readonly="True"></field>
                                            <field name="product_id"></field>
                                        </group>
                                        <group>
                                            <field name="qty" />
                                            <field name="note"></field> 
                                        </group>
                                    </group>
                                </form>
                            </field>
                            <group>
                                <field name="total_qty"></field>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"></field>
                    <field name="message_ids"></field>
                </div>
            </form>
        </field>
    </record>

</odoo>