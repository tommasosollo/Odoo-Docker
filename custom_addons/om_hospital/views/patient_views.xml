<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="name"></field>
                <field name="date_of_birth" optional="show"></field>
                <field name="gender" optional="hide"></field>
            </tree>
        </field>
    </record>

    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patients">
                <sheet>
                    <group>
                        <group>
                            <field name="name"></field>
                            <field name="date_of_birth"></field>
                        </group>
                        <group>
                            <field name="gender"></field> 
                            <field name="tag_ids" widget="many2many_tags"></field>
                        </group>
                    </group>

                    <notebook>
                        <page name="appointments" string="Appointments">
                            <field name="appointment_ids">
                                <tree>
                                    <field name="reference"></field>
                                    <field name="patient_id"></field>
                                    <field name="appointment_date" optional="show"></field>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="reference" readonly="True"></field>
                                            <field name="patient_id" readonly="1" widget="many2one" options="{'no_open': True}"/>
                                        </group>
                                        <group>
                                        <field name="appointment_date"></field>
                                            <field name="note"></field> 
                                        </group>
                                    </group>
                                    <notebook>
                                        <page name="prescription" string="Prescriptions">
                                            <field name="prescription_drugs_ids">
                                                <tree>
                                                    <field name="reference"></field>
                                                    <field name="product_id"></field>
                                                    <field name="qty"></field>
                                                    <field name="note" optional="show"></field>
                                                </tree>
                                                <form>
                                                    <group>
                                                        <group>
                                                            <field name="reference" readonly="True"></field>
                                                            <field name="product_id"></field>
                                                        </group>
                                                        <group>
                                                            <field name="qty" />
                                                            <field name="note"></field> 
                                                        </group>
                                                    </group>
                                                </form>
                                            </field>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                        </page>
                        <page name="other_info" string="Other Info">

                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"></field>
                    <field name="message_ids"></field>
                </div>
            </form>
        </field>
    </record>

    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_ids" eval="[Command.clear(),
                        (0,0,{'view_mode':'tree', 'view_id': ref('view_hospital_patient_tree')}),
                        (0,0,{'view_mode':'form', 'view_id': ref('view_hospital_patient_form')})]" />

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new patient
            </p>
        </field>
    </record>

</odoo>