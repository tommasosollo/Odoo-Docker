<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List View -->
    <record id="view_hospital_patient_list" model="ir.ui.view">
        <field name="name">hospital.patient.list</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <list string="Patients">
                <field name="name"/>
                <field name="date_of_birth" optional="show"/>
                <field name="gender" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patients">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date_of_birth"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="appointments" string="Appointments">
                            <field name="appointment_ids">
                                <list>
                                    <field name="reference"/>
                                    <field name="patient_id"/>
                                    <field name="appointment_date" optional="show"/>
                                </list>
                                <form>
                                    <group>
                                        <group>
                                            <field name="reference" readonly="True"/>
                                            <field name="patient_id" readonly="1" options="{'no_open': True}"/>
                                        </group>
                                        <group>
                                            <field name="appointment_date"/>
                                            <field name="note"/>
                                        </group>
                                    </group>
                                    <notebook>
                                        <page name="prescription" string="Prescriptions">
                                            <field name="prescription_drugs_ids">
                                                <list>
                                                    <field name="reference"/>
                                                    <field name="product_id"/>
                                                    <field name="qty"/>
                                                    <field name="note" optional="show"/>
                                                </list>
                                                <form>
                                                    <group>
                                                        <group>
                                                            <field name="reference" readonly="True"/>
                                                            <field name="product_id"/>
                                                        </group>
                                                        <group>
                                                            <field name="qty"/>
                                                            <field name="note"/>
                                                        </group>
                                                    </group>
                                                </form>
                                            </field>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                        </page>
                        <page name="other_info" string="Other Info"/>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="view_ids" eval="[
            (0,0,{'view_mode':'list','view_id': ref('view_hospital_patient_list')}),
            (0,0,{'view_mode':'form','view_id': ref('view_hospital_patient_form')})
        ]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new patient</p>
        </field>
    </record>

</odoo>
