<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="name"/>
                <field name="date_of_birth" optional="show"/>
                <field name="gender" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patients">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date_of_birth"/>
                            <field name="is_minor"/>
                            <field name="guardian" invisible="not is_minor" required="is_minor"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="appointments" string="Appointments">
                            <field name="appointment_ids">
                                <tree>
                                    <field name="reference"/>
                                    <field name="patient_id"/>
                                    <field name="appointment_date" optional="show"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="reference" readonly="True"/>
                                            <field name="patient_id" readonly="1" options="{'no_open': True}"/>
                                        </group>
                                        <group>
                                            <field name="appointment_date"/>
                                            <field name="note"/>
                                        </group>
                                    </group>
                                    <notebook>
                                        <page name="prescription" string="Prescriptions">
                                            <field name="prescription_drugs_ids">
                                                <tree>
                                                    <field name="reference"/>
                                                    <field name="product_id"/>
                                                    <field name="qty"/>
                                                    <field name="note" optional="show"/>
                                                </tree>
                                                <form>
                                                    <group>
                                                        <group>
                                                            <field name="reference" readonly="True"/>
                                                            <field name="product_id"/>
                                                        </group>
                                                        <group>
                                                            <field name="qty"/>
                                                            <field name="note"/>
                                                        </group>
                                                    </group>
                                                </form>
                                            </field>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                        </page>
                        <page name="other_info" string="Other Info"/>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Patients">
                <field name="name"/>
                <field name="date_of_birth"/>
                <field name="gender"/>
                <field name="guardian"/>
                <filter string="Male" name="male_patients" domain="[('gender','=','male')]"/>
                <!-- <separator></separator>   makes filters seperate with and operation between upper and lower tag -->
                <filter string="Female" name="female_patients" domain="[('gender','=','female')]"/>
                <group expand="1" string="Group By">
                    <filter name="group_by_gender" string="Gender" context="{'group_by' : 'gender'}"></filter>
                </group>
                <searchpanel>
                    <field name="gender" string="Gender" enable_counters="1"></field>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_ids" eval="[Command.clear(),
                        (0,0,{'view_mode':'tree', 'view_id': ref('view_hospital_patient_tree')}),
                        (0,0,{'view_mode':'form', 'view_id': ref('view_hospital_patient_form')})]" />
        
        <field name="search_view_id" ref="view_hospital_patient_search"></field>
        <field name="context">{'search_default_male_patients': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new patient
            </p>
        </field>
    </record>

</odoo>
